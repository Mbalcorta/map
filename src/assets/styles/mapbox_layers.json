[{
  "id": "unclustered-points",
  "type": "symbol",
  "source": "events",
  "filter": ["!has", "point_count"],
  "layout": {
      "icon-image": "custom-marker",
      "icon-size": 0.25,
      "icon-offset": [0, -30],
      "icon-allow-overlap": true
  }
},
{
  "id": "unclustered-points-with-stars",
  "type": "symbol",
  "source": "events",
  "filter": [
    "all",
    ["!has", "point_count"],
    ["==", "isOfficial", true]
  ],
  "layout": {
      "icon-image": "custom-marker-star",
      "icon-size": 0.4,
      "icon-offset": [0, -24],
      "icon-allow-overlap": true
  }
},
{
  "id": "clusters",
  "type": "circle",
  "source": "events",
  "paint": {
    "circle-color": "#ff4b4d",
    "circle-radius": 12,
    "circle-stroke-width": 2,
    "circle-stroke-color": "white"
  },
  "filter": [">=", "point_count", 1]
},
{
  "id": "clusters-count",
  "type": "symbol",
  "source": "events",
  "layout": {
      "text-field": "{point_count}",
      "text-font": [
          "DIN Offc Pro Medium",
          "Arial Unicode MS Bold"
      ],
      "text-size": 12
  },
  "paint": {
      "text-color": "white"
  }
}]
